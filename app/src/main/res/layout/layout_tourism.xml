<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/id_nameTour"
        android:text="@string/tvNameTour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <ImageView android:id="@+id/id_ImgTour"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:src="@drawable/parquedelcafe2"/>
        <TextView   android:id="@+id/id_Desc1Tour"
            android:text="@string/Desc1Tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_margin="4dp"/>
    </LinearLayout>
    <TextView android:id="@+id/id_Desc2Tour"
        android:text="@string/Desc2Tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="10sp"
        android:layout_gravity="center" android:gravity="center"/>

</LinearLayout>